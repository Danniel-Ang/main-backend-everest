<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1747263487906-1" author="dannielang">
        <createTable tableName="coupons">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_coupons"/>
            </column>
            <column name="code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="discount_amount" type="INT"/>
            <column name="max_usage" type="INT"/>
            <column name="usage_count" type="INT"/>
            <column name="valid_until" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1747263487906-2" author="dannielang">
        <createTable tableName="payment_methods">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_payment_methods"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="provider" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="account_number" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="account_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1747263487906-3" author="dannielang">
        <createTable tableName="reports">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_reports"/>
            </column>
            <column name="technician_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="repair_details" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="repair_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1747263487906-4" author="dannielang">
        <addUniqueConstraint columnNames="code" constraintName="uc_coupons_code" tableName="coupons"/>
    </changeSet>
    <changeSet id="1747263487906-5" author="dannielang">
        <addUniqueConstraint columnNames="name" constraintName="uc_payment_methods_name" tableName="payment_methods"/>
    </changeSet>

</databaseChangeLog>